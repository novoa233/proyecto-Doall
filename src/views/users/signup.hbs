<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Registrar una cuenta 
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group pb-3 d-flex">
            <input type="text" class="form-control mx-2" name="nombre" placeholder="Nombre" value="{{nombre}}">
        
            <input type="text" class="form-control " name="apellido" placeholder="Apellido" value="{{apellido}}">
          </div>
          <div class="form-group d-flex">
            {{!-- <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}"> --}}
            <input type="text" class="form-control  " placeholder="usuario email" aria-label="Username">
            <span class="input-group-text">@</span>
            <input type="text" class="form-control" placeholder="Ej. gmail.com" aria-label="Server">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}">
          </div>
        
          <button class="btn btn-primary btn-block">
            Registrar 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
